<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:component="ro.calin.component.*" 
		xmlns:model="ro.calin.component.model.*"
		width="100%"
		height="100%">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.app.App")]
	</fx:Metadata>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	
	<component:PictureViewer id="pictureViewer"/>
	
	<component:Menu id="menu" width="100%" bottom="100">
		<component:model>
			<model:MenuModel alpha="0.5">
				<model:entries>
					<s:ArrayList>
						<model:MenuEntryModel label="gallery" color="{0xff0000}">
						</model:MenuEntryModel>
						<model:MenuEntryModel label="info">
						</model:MenuEntryModel>
					</s:ArrayList>
				</model:entries>
			</model:MenuModel>
		</component:model>	
	</component:Menu>
	
	<component:CategoryViewer id="categoryViewer"/>
</s:Skin>
