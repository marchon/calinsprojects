<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:component="ro.calin.component.*"
		clipAndEnableScrolling="true">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.CategoryViewer")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import flash.utils.setTimeout;
			
			import spark.core.NavigationUnit;
			public function handleBottomScrolling(event:Event):void {
				hostComponent.scrollToBottom();
			}
			
		]]>
	</fx:Script>
	
	<!-- SkinParts
	name=thumbnailStrip, type=spark.components.DataGroup, required=true
	-->
	<!--<s:Rect width="100%" 
			height="100%">
		<s:fill>
			<s:SolidColor color="red"/>
		</s:fill>
	</s:Rect>-->
	<!--need to adjust height to match the maximum scale amount-->
	<s:DataGroup id="thumbnailStrip" height="100%" 
				 width="100%" >
				 <!--{hostComponent.thumbnailWidth * (hostComponent.scale + 1 /*for name*/)}-->
		<s:layout>
			<s:VerticalLayout gap="-1" horizontalAlign="left" />
			<!--verticalScrollPosition="{thumbnailStrip.contentHeight - thumbnailStrip.height}"-->
		</s:layout>
		<s:itemRenderer>
			<fx:Component>
				<!-- Inline item renderer. Do not autodraw ugly gray background.-->
				<s:ItemRenderer autoDrawBackground="false">
					<component:Subcategory model="{data}" buttonMode="true" 
										thumbWidth="{outerDocument.hostComponent.model.thumbWidth}"
										scaleFrom="{outerDocument.hostComponent.model.scaleFrom}"
										scaleTo="{outerDocument.hostComponent.model.scaleTo}"
										alwaysHighlight="{outerDocument.hostComponent.highlighted}" 
										imageLoadedHandler="{outerDocument.handleBottomScrolling}"/>
				</s:ItemRenderer>
			</fx:Component>
		</s:itemRenderer>
	</s:DataGroup>
</s:Skin>
