<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="500" minHeight="500" xmlns:utils="ro.calin.utils.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.PictureViewer")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="disabled"/>
		<s:State name="normal"/>
		<s:State name="disabledWithControlBar"/>
		<s:State name="normalWithControlBar"/>
	</s:states>
	
	<utils:CacheableImage id="picture1" />
	<utils:CacheableImage id="picture2" />
	
	<!--<mx:ProgressBar id="progressBar" verticalCenter="0" horizontalCenter="0"/>-->
	
	<s:Button id="leftButton" skinClass="ro.calin.component.skin.PictureViewerButtonSkin" 
			  verticalCenter="0" left="5" visible="{hostComponent.hasLeftRight}" buttonMode="true" rotation="180"/>
	<s:Button id="rightButton" skinClass="ro.calin.component.skin.PictureViewerButtonSkin" 
			  verticalCenter="0" right="5" visible="{hostComponent.hasLeftRight}" buttonMode="true"/>
</s:Skin>
