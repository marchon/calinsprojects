<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.Subcategory")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
	</s:states>
	
	<s:transitions>
		<s:Transition>
			<s:Parallel>
				<s:Scale targets="{[back, image]}" duration="300"/>
				<s:Move target="{subcategory}" duration="300" />
				<s:Fade target="{image}" duration="300"/>
				
				<!--not doing reverse-->
				<s:Resize target="{details}" duration="400" />
				<!--<s:Animate target="{details}" duration="400">
					
				</s:Animate>-->
			</s:Parallel>	
		</s:Transition>
	</s:transitions>
	
	<s:Group id="subcategory" x.normal="{hostComponent.leftMargin}" x.hovered="0">
		
		<s:Rect id="back" width="100%" height="100%" 
				scaleX.normal="{hostComponent.scaleFrom}" scaleY.normal="{hostComponent.scaleFrom}"
				scaleX.hovered="{hostComponent.scaleTo}" scaleY.hovered="{hostComponent.scaleTo}">
			<s:fill>
				<s:SolidColor color="black"/>
			</s:fill>
		</s:Rect>
		<s:Group>
			<s:layout>
				<s:HorizontalLayout verticalAlign="top"/>
			</s:layout>
			
			<mx:Image id="image" width="{hostComponent.thumbWidth}" 
					  scaleX.normal="{hostComponent.scaleFrom}" scaleY.normal="{hostComponent.scaleFrom}"
					  scaleX.hovered="{hostComponent.scaleTo}" scaleY.hovered="{hostComponent.scaleTo}" 
					  height="100%" alpha="0.3" alpha.hovered="1.0" />
			
			<s:Group id="details" includeInLayout.normal="false" visible.normal="false"
					 width.normal="0" width.hovered="{hostComponent.thumbWidth}">
				<s:layout>
					<s:VerticalLayout horizontalAlign="left" paddingTop="10" gap="8"/>
				</s:layout>
				<s:Label id="subcatName" color="white" fontSize="20"/>
				<s:Label id="subcatDesc" color="white" fontSize="10"/>
			</s:Group>
		</s:Group>
	</s:Group>
</s:Skin>
